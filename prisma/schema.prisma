generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Pet {
  CAT
  DOG

  @@map("pet")
}

enum Status {
  PENDING
  FINISHED
  CANCELED

  @@map("status")
}

type Image {
  url String
}

type Breed {
  id    String
  name  String
  image Image
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String

  schedules Schedule[]

  @@map("users")
}

model Schedule {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @map("user_id") @db.ObjectId
  petname     String
  age         String
  sex         String
  weight      String
  service     String
  date        DateTime
  time        String
  observation String
  pet         Pet
  status      Status
  breed       Breed

  user User @relation(fields: [userId], references: [id])

  @@map("schedules")
}
